<header class="header">
  <nav class="navbar">
    <div class="navbar-brand">
      <ul class="navbar-brand-list">
          <li class="brand-logo">
              <a class="navbar-brand" href="https://www.couchbase.com">
                <img src="{{{uiRootPath}}}/img/CBColorWhite.svg" alt="Couchbase" />
              </a>
          </li>
      </ul>
      <a class="navbar-title" href="{{{or site.url siteRootPath}}}">{{site.title}}</a>
      {{#if env.SITE_SEARCH_PROVIDER}}
      <div class="navbar-item search hide-for-print">
        <div id="search-field" class="field">
          <input id="search-input" type="text" placeholder="Search the docs"{{#if page.home}} autofocus{{/if}}>
        </div>
      </div>
      {{/if}}
      <button class="navbar-burger" data-target="topbar-nav">
        <span></span>
        <span></span>
        <span></span>
      </button>
    </div>
    <div id="topbar-nav" class="navbar-menu">
      <div class="navbar-end">
        <a class="navbar-item" href="https://docs.couchbase.com/home/contribute/index.html">Contribute to the Documentation</a>
        <a class="navbar-item" href="https://docs.couchbase.com/home/index.html">Documentation Site</a>
      </div>
      <div class="navbar-item">
          <span class="control">
            <a class="button is-primary" href="https://www.couchbase.com/downloads">Download</a>
          </span>
        </div>
    </div>
  </nav>
</header>
